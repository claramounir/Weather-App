<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".alertScreen.view.AlarmFragment">

    <LinearLayout

        android:layout_width="369dp"

        android:layout_height="wrap_content"

        android:layout_marginStart="24dp"

        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView

            android:id="@+id/textView"

            android:layout_width="match_parent"

            android:layout_height="53dp"

            android:layout_weight="1"

            android:background="@color/baby_pink"

            android:gravity="center"

            android:text="Set Alarm"

            android:textColor="#5E35B1"

            android:textSize="24sp"

            android:textStyle="bold" />


        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:orientation="horizontal"

            android:weightSum="2">


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:layout_marginStart="20dp"

                android:layout_marginTop="20dp"

                android:layout_marginEnd="20dp"

                android:layout_marginBottom="20dp"

                android:layout_weight="1"

                android:elevation="5dp"

                android:orientation="vertical"

                app:cardBackgroundColor="@color/dark_purple"

                app:cardCornerRadius="30dp">


                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    android:orientation="vertical">


                    <TextView

                        android:id="@+id/textView1"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:layout_gravity="center"

                        android:gravity="center"

                        android:text="From"

                        android:textColor="@color/baby_pink"

                        android:textSize="16sp"

                        android:textStyle="bold" />


                    <TextView

                        android:id="@+id/tvFromDate"

                        android:layout_width="match_parent"

                        android:layout_height="35dp"

                        android:ems="10"

                        android:gravity="center"

                        android:minHeight="48dp"

                        android:text="15-10-2023"

                        android:textColor="@color/baby_pink"

                        android:textSize="16sp"

                        android:textStyle="normal" />


                    <TextView

                        android:id="@+id/tvFromTimePicker"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:ems="10"

                        android:gravity="center"


                        android:minHeight="48dp"

                        android:text="8:05 AM"

                        android:textColor="@color/baby_pink"

                        android:textSize="16sp"

                        android:textStyle="normal" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:layout_marginStart="20dp"

                android:layout_marginTop="20dp"

                android:layout_marginEnd="20dp"

                android:layout_marginBottom="20dp"

                android:layout_weight="1"

                android:elevation="5dp"

                android:orientation="vertical"

                app:cardBackgroundColor="@color/dark_purple"

                app:cardCornerRadius="30dp">


                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    android:orientation="vertical">


                    <TextView

                        android:id="@+id/textView2"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:layout_gravity="center"

                        android:gravity="center"

                        android:text="TO"

                        android:textColor="@color/baby_pink"

                        android:textSize="16sp"

                        android:textStyle="bold" />


                    <TextView

                        android:id="@+id/tvToDate"

                        android:layout_width="match_parent"

                        android:layout_height="34dp"

                        android:ems="10"

                        android:gravity="center"

                        android:minHeight="48dp"

                        android:text="15-10-2023"

                        android:textColor="@color/baby_pink"

                        android:textSize="16sp"

                        android:textStyle="normal" />


                    <TextView

                        android:id="@+id/tvToTimePicker"

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:ems="10"

                        android:gravity="center"

                        android:minHeight="48dp"

                        android:text="8:05 AM"

                        android:textColor="@color/baby_pink"

                        android:textSize="16sp"

                        android:textStyle="normal" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:layout_weight="1"

            android:orientation="vertical"

            android:weightSum="3">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:layout_marginStart="20dp"

                android:layout_marginEnd="20dp"

                android:layout_weight="1"

                android:elevation="5dp"

                android:orientation="vertical"

                app:cardBackgroundColor="@color/dark_purple"

                app:cardCornerRadius="30dp">


                <LinearLayout

                    android:layout_width="332dp"

                    android:layout_height="71dp"

                    android:orientation="vertical">


                    <RadioGroup

                        android:id="@+id/radioGroupNotification"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:layout_gravity="center"

                        android:orientation="horizontal">


                        <RadioButton

                            android:id="@+id/radioButtonAlarm"

                            android:layout_width="match_parent"

                            android:layout_height="match_parent"

                            android:layout_marginEnd="20dp"

                            android:text="Alarm"

                            android:textColor="@color/baby_pink"

                            android:textStyle="bold"
                            tools:ignore="TouchTargetSizeCheck" />


                        <RadioButton

                            android:id="@+id/radioButtonNotify"

                            android:layout_width="match_parent"

                            android:layout_height="match_parent"

                            android:layout_marginEnd="20dp"

                            android:text="Notification"

                            android:textColor="@color/baby_pink"

                            android:textStyle="bold"
                            tools:ignore="TouchTargetSizeCheck" />


                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:layout_weight="1"

                android:orientation="vertical">


                <Button

                    android:id="@+id/btnMap"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:layout_weight="1"

                    android:backgroundTint="@color/dark_purple"

                    android:text="Sydney"

                    android:textColor="@color/baby_pink"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:layout_gravity="center"

                android:layout_weight="1"

                android:weightSum="2">


                <Button

                    android:id="@+id/btnCancel"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_marginEnd="20dp"

                    android:layout_weight="1"

                    android:backgroundTint="@color/dark_purple"

                    android:text="Cancel"

                    android:textColor="@color/baby_pink" />


                <Button

                    android:id="@+id/btnSet"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_marginEnd="20dp"

                    android:layout_weight="1"

                    android:backgroundTint="@color/dark_purple"

                    android:gravity="center"

                    android:text="Set"

                    android:textColor="@color/baby_pink" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




